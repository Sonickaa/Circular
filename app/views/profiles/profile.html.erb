<div class="container-full">
<img src="<%= current_user.avatar %>" alt="Profile Picture" class="profile-picture">
<div class="container-greetings">
  <h1>Hello, <%= current_user.first_name %> <%= current_user.last_name %></h1>
  <div class="container-greetings-message">
  </div>
</div>

<div class="buttons">
  <%= link_to "Edit Profile", edit_profile_path(@user), class: "button" %>
  <%= link_to "Log Out", destroy_user_session_path, data: { turbo_method: :delete }, class: "button" %>
</div>

<h3>Bio</h3>
<div class="container-bio">
  <%= current_user.bio %>
</div>

<div class="my-items">
  <h3>My items</h3>
</div>

<div class="container-items">
  <% @products.each do |product| %>
    <div class="each-item">
      <div class="container-image">
      <%= cl_image_tag product.photo.key, alt: product.title %>
      </div>
      <div class="text-product">
        <p><%= product.title %></p>
      </div>
    </div>
  <% end %>
</div>

</div>
