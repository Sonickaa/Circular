<div class="container-full">
  <div><img src="<%= current_user.avatar %>" alt="Profile Picture" class="profile-picture"></div>
    <div><h1>Hello, <%= current_user.first_name %></h1></div>
      <div class="container-greetings-message"><h4>Your Dashboard</h4></div>
        <div class="dashboard-offer-button-container">
          <%= link_to "Received Offers", dashboard_received_path, class: "dashboard-offer-button" %>
          <%= link_to "Finished Deals", dashboard_finished_path, class: "dashboard-offer-button" %>
        </div>
        <div class="dashboard-offer-button-container">
          <%= link_to "Sent offers", dashboard_sent_path, class: "dashboard-offer-button" %>
        </div>
        <div class="wishlist-container">
          <% if @sent_offers.present? %>
            <% @sent_offers.each do |offer| %>
              <% if offer.products %>
                <% offer.products.each do |product| %>
                  <div class="dashboard-product-card">
                    <div class="wishlist-product-image">
                      <%= cl_image_tag product.photo.key, class: 'product-image img-fluid' %>
                    </div>
                    <div class="product-info product-background">
                      <div class="product-title-container">
                        <span class="product-title"><%= truncate(product.title, length: 20, omission: "...") %></span>
                      </div>
                      <div class="product-description-container">
                        <span class="product-description"><%= truncate(product.description, length: 80, omission: "...") %></span>
                      </div>
                    </div>
                    <div class="product-actions">
                      <div class="dashboard-product-delete-button-container">
                        <%= link_to image_tag("icons/btn Trash.svg", style: "width: 25px"), offer_path(offer.id), method: :delete, data: {turbo_method: :delete}  %>
                      </div>
                    </div>
                  </div>
                <% end %>
              <% end %>
            <% end %>
          <% else %>
            <div class="text-center mx-auto">
              <p class="opacity-50 text-center">No sent offers yet.</p>
            </div>
          <% end %>
        </div>
</div>

<div>
<%= link_to products_path, class: '' do %>
  <svg class="close-button" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 40 40">
