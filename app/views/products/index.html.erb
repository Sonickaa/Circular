<div class="container-full">
  <div class="container-greetings">
    <h1> Hello, <%= current_user.first_name %> </h1>
    <div class="container-greetings-message">
    <h4> Ready to circle today?</h4>
    </div>
</div>


<div class="dropdown">
  <button class="btn btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
    Categories
  </button>

  <ul class="dropdown-menu" aria-labelledby="categoryDropdown">
    <% @categories.each do |category| %>
      <li><%= link_to category.name, products_path(category: category.id), class: "dropdown-item" %></li>
    <% end %>
  </ul>
</div>


<div id="carouselExample" class="carousel slide">
  <div class="carousel-inner">
    <div class="carousel-item active">
        <div class="white">
        <% if @products[0] %>
          <h1><%= @products[0].title %></h1>
           <%#= cl_image_tag @products[0].photo.key, height: 300, width: 400, crop: :fill %>
  </div>


  <div id="carouselExample" class="carousel slide">
    <div class="carousel-inner">
      <% if @products.empty? %>
        <p>No products yet!</p>
      <% else %>
        <% @products.each_with_index do |product,index| %>
          <div class="carousel-item <%= 'active' if index == 0 %>">
            <div class="container-white">
              <h1><%= product.title %></h1>
              <%= cl_image_tag product.photo.key, class: 'product-image' %>
              <%= link_to ' Add to my wishlist ', product_product_wishlists_path(product), data: {turbo_method: :post}%>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
        
  <button class="carousel-control-prev" type="button" data-bs-target="#carouselExample" data-bs-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Previous</span>
  </button>
  <button class="carousel-control-next" type="button" data-bs-target="#carouselExample" data-bs-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Next</span>
  </button>
</div>
