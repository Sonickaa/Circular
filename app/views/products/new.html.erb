          <line class="cls-2" x1="28.5" y1="11.43" x2="11.3" y2="28.51"/>
        </g>
      </g>
    </g>
  </svg>
<% end %>

  <!-- Simple form for uploading offer -->
  <br>
  <form class="dark-gray-text" action="/products" method="post" enctype="multipart/form-data">

    <div class="styled-input">
      <label>Image:</label>
      <input type="file" name="product[photo]">
    </div>
    <p></p>
    <div class="styled-input">
      <label>Title:</label>
      <input type="text" name="product[title]">
    </div>

    <div class="styled-input">
     <!-- need to be implemented -->
      <label>Category:</label>
    </div>
      <select name="product[category_id]" class="narrow-dropdown">
      <% Category.all.each do |category| %>
        <option value="<%= category.id %>" ><%= category.name %></option>
      <% end %>

    </select>

    <div class="styled-input">

      <label>Condition:</label>
      <select name="product[condition]">
        <option value="New">New</option>
        <option value="Used">Used</option>
        <option value="Refurbished">Refurbished</option>
      </select>
    </div>
     <div class="styled-input">
     <label>Price â‚¬:</label>
     <input type="integer", name="product[price]">
     </div>

</select>

    <div class="styled-input">
      <label>Description:</label>
      <textarea name="product[description]" rows="5"></textarea>
    </div>
    <button type="submit" class="submit-button">Submit</button>
  </form>
</body>
</div>
