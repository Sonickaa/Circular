<%= simple_form_for(@product, url: product_path, method: :patch) do |f| %>
  <%= f.input :title %>
  <%= f.input :category_id, collection: Category.all, input_html: { class: 'narrow-dropdown' } %>
  <%= f.input :description %>
  <%= f.input :condition %>
  <%= f.input :price %>
  <%= f.submit %>
<% end %>
